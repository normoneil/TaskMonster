<div class="page-header">
  <h1>
    Views
    <a href="/views/new" class="btn btn-lg btn-success">New View</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @views.each do |view| %>
      <tr>
        <td><%= view.name %></td>
        <td>
          <a href="/views/<%= view.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_view/<%= view.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
