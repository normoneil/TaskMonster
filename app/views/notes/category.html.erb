<div class="row">
  <div class="col-md-12">
    <h2><%= @category.name %></h2>
    <% @views.each do |view| %>
      <h3><%= view.name %></h3>
          <table class="table table-striped table-hover">
            <tr>
              <th width="15%"></th>
              <th width="20%">Title</th>
              <th width="20%">Body</th>
              <th width="10%">Category</th>
              <th width="10%">View</th>
              <th width="25%">Actions</th>
            </tr>

            <% @notes.order("created_at DESC").each do |note| %>
              <% if note.view_id == view.id && note.category_id == @category.id %>

                <tr>
                  <td width="15%"><small>created <%= time_ago_in_words(note.created_at) %> ago</small></td>
                  <td width="20%"><%= note.title %></td>
                  <td width="20%"><%= truncate(note.body) %></td>
                  <td width="10%"><%= note.category.name %></td>
                  <td width="10%"><%= note.view.name %></td>
                  <td width="25%">
                    <a href="/notes/<%= note.id %>" class="btn btn-primary">Show</a>
                    <a href="/notes/<%= note.id %>/edit" class="btn btn-warning">Edit</a>
                    <a href="/delete_note/<%= note.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </table>
    <% end %>
  </div>
</div>
