<div class="page-header">
  <h3><%= @note.title %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <!-- <dt>Parent</dt>
      <dd><%= @note.parent_id %></dd> -->

      <dt>Body</dt>
      <dd><%= @note.body %></dd>

      <dt>View</dt>
      <dd><%= @note.view.name %></dd>

      <dt>Category</dt>
      <dd><%= @note.category.name %></dd>

      <dt>Created</dt>
      <dd><%= @note.created_at.strftime("%d %b %Y") %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/notes" class="btn btn-primary">
        Back
      </a>
      <a href="/notes/<%= @note.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_note/<%= @note.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
